<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        tools:context="com.example.ip.myapplication.TwoActivity"
        android:weightSum="1">

        <Button
            android:id="@+id/but_7"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/tapping_5"
            android:drawablePadding="8dip"
            android:text="속삭임+탭핑\n37분 56초" />

        <Button
            android:id="@+id/but_2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/tapping_2"
            android:background="@drawable/button1"
            android:text="탭핑+뚜껑열기\n42분 47초" />

        <Button
            android:id="@+id/but_3"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:text="Suna 탭핑\n33분 34초"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/tapping_4"
            android:background="@drawable/button1"
            android:drawablePadding="8dip" />
        <Button
            android:id="@+id/but_4"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:text="미니유 탭핑\n51분 38초"
            android:drawableLeft="@drawable/tapping_3"
            android:background="@drawable/button1"

            android:layout_marginTop="0dp"
            />

        <Button
            android:id="@+id/but_5"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/tapping_1"
            android:background="@drawable/button1"
            android:text="긴탭핑\n1시간 43분" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
        </LinearLayout>

    </LinearLayout>
</ScrollView>