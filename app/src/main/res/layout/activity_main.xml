<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.ip.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:paddingLeft="42dp"
        android:paddingTop="40dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/but_1"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/moon1"
            android:text="탭핑\nasmr"
            />

        <Button
            android:id="@+id/but_2"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/moon1"
            android:text="이팅\nasmr" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="42dp"
        android:paddingTop="20dp"

        >

        <Button
            android:id="@+id/but_3"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/moon1"
            android:text="귀청소·마사지\nasmr" />

        <Button
            android:id="@+id/but_4"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/moon1"
            android:text="슬라임(액괴)\nasmr" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:paddingLeft="42dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/but_5"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:text="화장\nasmr"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/moon1"
            />

        <Button
            android:id="@+id/but_6"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/moon1"
            android:text="기타\nasmr"
            android:layout_weight="0.01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="42dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/but_7"
            android:layout_width="37dp"
            android:layout_height="46dp"
            android:layout_marginLeft="260dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/boxx" />

    </LinearLayout>

</LinearLayout>
