<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:context="com.example.ip.myapplication.TwoActivity"
    android:weightSum="1"

    >

    <Button
        android:id="@+id/but_1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/button1"
        android:drawableLeft="@drawable/maca"
        android:drawablePadding="8dip"
        android:text="마카롱이팅\n36분 48초" />

    <Button
        android:id="@+id/but_2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/jelly"
        android:background="@drawable/button1"
        android:text="젤리이팅\n35분 58초" />

    <Button
        android:id="@+id/but_3"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="머렝쿠키이팅\n33분 41초"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/cookie"
        android:background="@drawable/button1"
        android:drawablePadding="8dip" />
    <Button
        android:id="@+id/but_4"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="치킨이팅\n41분 19초"
        android:drawableLeft="@drawable/chick"
        android:background="@drawable/button1"

        android:layout_marginTop="0dp"
        />

    <Button
        android:id="@+id/but_5"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/candy"
        android:background="@drawable/button1"
        android:text="캔디이팅\n24분 39초" />

    <Button
        android:id="@+id/but_6"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="마시멜로우이팅\n29분 34초"
        android:drawableLeft="@drawable/mashroom"
        android:background="@drawable/button1"
        android:layout_marginTop="0dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >
    </LinearLayout>

</LinearLayout>
    </ScrollView>

